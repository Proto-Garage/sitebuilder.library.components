{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "typings"],
    "lib": ["dom", "esnext"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "typings/index.d.ts"],
  "exclude": ["node_modules"]
}
