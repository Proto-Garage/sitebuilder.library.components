{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es6",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "lib": ["dom", "esnext"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "typings/index.d.ts"]
}
