{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "./src/react-app-env.d.ts",
    "./src/serviceWorker.ts",
    "./src/index.tsx",
    "./src/App.tsx"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "typings/index.d.ts"
  ]
}
